<UserControl x:Class="SWPSD_PROJEKT.UI.Views.SummaryOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SWPSD_PROJEKT.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <StackPanel Grid.ColumnSpan="3" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource GoodbyeInfo}" VerticalAlignment="Center">Dziękujemy za rezerwację! <LineBreak />Czekamy na Ciebie</TextBlock>
            <Button Margin="0 50 0 0" Background="RoyalBlue" Foreground="WhiteSmoke" Width="150" Style="{StaticResource {x:Type Button}}"
                    Command="{Binding NavigateRoomSelectCommand}">Powrót do głównej</Button>
        </StackPanel>
    </Grid>
</UserControl>